@using System.Web.Mvc.Html
@model IEnumerable<AimlBotWeb.Messages.MessageModel>

@{
    ViewBag.Title = "Сообщения";
}
<h3>@ViewBag.Title</h3>
<p>
    @Html.ActionLink("Создать новую", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SenderType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <p style="width:450px">
                    @Html.DisplayFor(modelItem => item.Text)
                </p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderType)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>*@
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Изменить", "Update", new { id = item.Id }) |
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }
</table>
